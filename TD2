#include "mbed.h"
#include "rtos.h"
#include "C12832.h"

// Blinking rate in milliseconds
#define BLINKING_RATE 500ms

// Initialise the digital pin LED1 as an output
    DigitalOut led1(LED1);

    // Initialise the digital pin LED2 as an output
    DigitalOut led2(LED2);

    // Initialise the digital pin LED3 as an output
    DigitalOut led3(LED3);

    Thread t1; 
    Thread t2; 
    Thread t3;

    //Prototypes de fonction 
    void main_1(void);
    void main_2(void); 
    void main_3(void);


int main()
{
    t1.start(&main_1);
    t2.start(&main_2);
    t3.start(&main_3);


    while (true)
    {
        ThisThread::sleep_for(BLINKING_RATE);
    }
}

// DÃ©finitions des fonctions 
void main_1(void) 
{
    while (true)
    {
        led1=!led1 ;
        ThisThread::sleep_for(BLINKING_RATE);

    }
}

void main_2(void)
{
    while(true)
    {
        led2=!led2 ;
        ThisThread::sleep_for(BLINKING_RATE);
    }
}

void main_3(void)
{
    while(true)
    {
        led3=!led3 ;
        ThisThread::sleep_for(BLINKING_RATE);
    }
}



